<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.weboard.mapper.PostMapper">
    <select id="getPostById" parameterType="int" resultType="com.example.weboard.dto.PostDTO">
        SELECT * FROM post WHERE post_id=#{postId}
    </select>

    <select id="getPostAll" resultType="com.example.weboard.dto.PostDTO">
        SELECT * FROM post
    </select>

    <insert id="insertPost" parameterType="com.example.weboard.dto.PostDTO">
        INSERT INTO post (title, created_by, updated_by, updated_at, views, contents, file_path)
        VALUES (#{title}, #{createdBy}, null, null, #{views}, #{contentText}, #{fileData});
    </insert>

    <update id="updatePost" parameterType="com.example.weboard.dto.PostDTO">
        UPDATE post
        <set>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="updateBy != null">
                updated_by=#{updatedBy},
            </if>
            <if test="updatedAt != null">
                updated_at=#{updatedAt},
            </if>
            <if test="views != null">
                views=#{views},
            </if>
            <if test="contentText != null">
                content_text=#{contentText},
            </if>
            <if test="fileData != null">
                file_data=#{fileData},
            </if>
        </set>
            WHERE post_id = #{postId}
    </update>

    <delete id="deletePost" parameterType="int">
        DELETE FROM post
            WHERE post_id=#{postId}
    </delete>
</mapper>